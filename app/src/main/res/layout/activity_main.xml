<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <ImageButton
        android:id="@+id/captureIB"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@drawable/camera"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/flashToggleIB"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@drawable/flash_off"
        app:tint="@color/white" />

<!--    <ImageButton-->
<!--        android:id="@+id/flipCameraIB"-->
<!--        android:layout_width="40dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_marginEnd="20dp"-->
<!--        android:layout_below="@id/flashToggleIB"-->
<!--        android:background="?attr/selectableItemBackgroundBorderless"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:src="@drawable/flip_camera"-->
<!--        app:tint="@color/white" />-->

    <ImageButton
        android:id="@+id/appInfo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_info_24"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/logoNarro"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/appInfo"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@id/appInfo"
        android:layout_alignBottom="@id/appInfo"
        android:src="@drawable/narro"
        android:scaleType="fitCenter" />


</RelativeLayout>